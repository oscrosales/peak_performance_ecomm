<div class="card" style="width: 500px;">
  <h1>
    <% if name_is_link%>
      <%= link_to product.name, product %>
    <% else %>
      <%= product.name %>
    <% end%>
  </h1>

  <% if product.image.present? %>
    <%= image_tag product.image, :alt => product.name, :class => "img-fluid img-thumbnail rounded mx-auto " %>
  <% end %>

  <% if index == false %>
    <h2><%= product.price %></h2>
    <h4><%= product.stock_quantity %> in Stock</h4>

    <p><%= product.description %></p>
  <% end %>
</div>