<div class="section">
  <div class="container box">
    <h1 class="title has-text-centered">Shipping Information</h1>

    <%= form_with url: checkout_invoice_path, method: :post, local: true do |f| %>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, class: "input", value: current_user ? current_user.name : nil %>
      </div>

      <div class="field">
        <%= f.label :address %>
        <%= f.text_field :address, class: "input", value: current_user ? current_user.address : nil %>
      </div>

      <div class="field">
        <%= f.label :city %>
        <%= f.text_field :city, class: "input", value: current_user ? current_user.city : nil %>
      </div>

      <div class="field">
        <%= f.label :province_id, "Province" %>
        <%= f.collection_select :province_id, Province.all, :id, :name, {}, { class: "input" } %>
      </div>

      <div class="field">
        <%= f.label :postal_code %>
        <%= f.text_field :postal_code, class: "input", value: current_user ? current_user.postal_code : nil %>
      </div>

      <div class="field">
        <%= f.label :phone %>
        <%= f.text_field :phone, class: "input", value: current_user ? current_user.phone : nil %>
      </div>

      <div class="control mt-4">
        <%= f.submit "View Invoice", class: "button is-primary is-fullwidth" %>
      </div>
    <% end %>
  </div>
</div>
